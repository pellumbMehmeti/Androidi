<?xml version="1.0" encoding="utf-8"?><!--per github-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FieldSingleActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/post_SingleFieldImage"
            android:layout_width="match_parent"
            android:layout_height="142dp"
            android:adjustViewBounds="true"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/post_SingleFieldName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Field name goes here"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/post_SingleFieldPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Price goes here"
            android:textSize="15dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_date"
                android:layout_width="191dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Pick a date" />

            <EditText
                android:id="@+id/reservation_date"
                android:layout_width="191dp"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:text="Picked date goes here!"
                android:textAppearance="@android:style/TextAppearance.Material.Small"
                tools:textSize="15dp"
                android:textStyle="bold"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="191dp"
                android:layout_height="30dp"
                android:text="Pick a time!"
                android:textAppearance="@android:style/TextAppearance.Material.Small"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/book_time"
                android:layout_width="191dp"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:text="Picked time goes here!"
                android:textAppearance="@android:style/TextAppearance.Material.Small"
                tools:textSize="15dp"
                android:textStyle="bold"/>


        </LinearLayout>

        <ListView
            android:id="@+id/list_Terminet"
            android:layout_width="match_parent"
            android:layout_height="147dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:ems="10" />





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="horizontal">

            <Button
                android:id="@+id/remove_btn"
                android:layout_width="191dp"
                android:layout_height="wrap_content"

                android:text="Remove" />

            <Button
                android:id="@+id/book_btn"
                android:layout_width="191dp"
                android:layout_height="wrap_content"

                android:text="Book" />
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
